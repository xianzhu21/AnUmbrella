<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.xianzhuliu.anumbrella"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.github.xianzhuliu.anumbrella.activity.ChooseAreaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="io.github.xianzhuliu.anumbrella.activity.WeatherActivity"/>

        <service android:name="io.github.xianzhuliu.anumbrella.service.AutoUpdateService"/>
        <receiver android:name="io.github.xianzhuliu.anumbrella.receiver.AutoUpdateReceiver"/>
    </application>

</manifest>