<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.xianzhuliu.anumbrella"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ChooseAreaActivity">
        </activity>

        <service android:name=".service.AutoUpdateService"/>

        <receiver android:name=".receiver.AutoUpdateReceiver"/>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CityActivity"
            android:label="@string/title_activity_city"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.xianzhuliu.anumbrella.activity.MainActivity"/>
        </activity>
    </application>

</manifest>